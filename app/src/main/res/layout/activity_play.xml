<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="darkone.hangman.play"
    android:background="#27AAE1"
    android:id="@+id/play_view">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:text="a"
        android:id="@+id/a_button"

        android:layout_marginBottom="123dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:text="b"
        android:id="@+id/b_button"
        android:layout_alignTop="@+id/a_button"
        android:layout_toRightOf="@+id/a_button"
        android:layout_toEndOf="@+id/a_button" />

    <Button
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:text="c"
        android:id="@+id/c_button"
        android:layout_alignTop="@+id/b_button"
        android:layout_toRightOf="@+id/b_button"
        android:layout_toEndOf="@+id/b_button" />

    <Button
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:text="d"
        android:id="@+id/d_button"
        android:layout_alignTop="@+id/c_button"
        android:layout_toRightOf="@+id/c_button"
        android:layout_toEndOf="@+id/c_button" />

    <Button
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:text="e"
        android:id="@+id/e_button"
        android:layout_alignTop="@+id/d_button"
        android:layout_toRightOf="@+id/d_button"
        android:layout_toEndOf="@+id/d_button" />

    <Button
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:text="f"
        android:id="@+id/f_button"
        android:layout_alignTop="@+id/e_button"
        android:layout_toRightOf="@+id/e_button"
        android:layout_toEndOf="@+id/e_button" />

    <Button
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:text="g"
        android:id="@+id/g_button"
        android:layout_alignTop="@+id/f_button"
        android:layout_toRightOf="@+id/f_button"
        android:layout_toEndOf="@+id/f_button" />

    <Button
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:text="h"
        android:id="@+id/h_button"
        android:layout_below="@+id/b_button"
        android:layout_toLeftOf="@+id/b_button"
        android:layout_toStartOf="@+id/b_button" />

    <Button
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:text="i"
        android:id="@+id/i_button"
        android:layout_below="@+id/b_button"
        android:layout_toRightOf="@+id/h_button"
        android:layout_toEndOf="@+id/h_button" />

    <Button
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:text="j"
        android:id="@+id/j_button"
        android:layout_below="@+id/b_button"
        android:layout_toRightOf="@+id/i_button"
        android:layout_toEndOf="@+id/i_button" />

    <Button
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:text="k"
        android:id="@+id/k_button"
        android:layout_below="@+id/c_button"
        android:layout_toRightOf="@+id/j_button"
        android:layout_toEndOf="@+id/j_button" />

    <Button
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:text="l"
        android:id="@+id/l_button"
        android:layout_below="@+id/e_button"
        android:layout_alignLeft="@+id/e_button"
        android:layout_alignStart="@+id/e_button" />

    <Button
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:text="m"
        android:id="@+id/m_button"
        android:layout_below="@+id/e_button"
        android:layout_toRightOf="@+id/l_button"
        android:layout_toEndOf="@+id/l_button" />

    <Button
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:text="n"
        android:id="@+id/n_button"
        android:layout_below="@+id/f_button"
        android:layout_toRightOf="@+id/m_button"
        android:layout_toEndOf="@+id/m_button" />

    <Button
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:text="o"
        android:id="@+id/o_button"
        android:layout_below="@+id/h_button"
        android:layout_toLeftOf="@+id/i_button"
        android:layout_toStartOf="@+id/i_button" />

    <Button
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:text="p"
        android:id="@+id/p_button"
        android:layout_alignTop="@+id/o_button"
        android:layout_toRightOf="@+id/o_button"
        android:layout_toEndOf="@+id/o_button" />

    <Button
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:text="q"
        android:id="@+id/q_button"
        android:layout_alignTop="@+id/p_button"
        android:layout_toRightOf="@+id/p_button"
        android:layout_toEndOf="@+id/p_button" />

    <Button
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:text="r"
        android:id="@+id/r_button"
        android:layout_alignTop="@+id/q_button"
        android:layout_toRightOf="@+id/q_button"
        android:layout_toEndOf="@+id/q_button" />

    <Button
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:text="s"
        android:id="@+id/s_button"
        android:layout_alignTop="@+id/r_button"
        android:layout_alignLeft="@+id/l_button"
        android:layout_alignStart="@+id/l_button" />

    <Button
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:text="t"
        android:id="@+id/t_button"
        android:layout_alignTop="@+id/s_button"
        android:layout_toRightOf="@+id/s_button"
        android:layout_toEndOf="@+id/s_button" />

    <Button
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:text="u"
        android:id="@+id/u_button"
        android:layout_alignTop="@+id/t_button"
        android:layout_toRightOf="@+id/t_button"
        android:layout_toEndOf="@+id/t_button" />

    <Button
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:text="v"
        android:id="@+id/v_button"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/o_button"
        android:layout_toEndOf="@+id/o_button" />

    <Button
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:text="w"
        android:id="@+id/w_button"
        android:layout_alignTop="@+id/v_button"
        android:layout_toRightOf="@+id/v_button"
        android:layout_toEndOf="@+id/v_button" />

    <Button
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:text="x"
        android:id="@+id/x_button"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/s_button"
        android:layout_toStartOf="@+id/s_button" />

    <Button
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:text="y"
        android:id="@+id/y_button"
        android:layout_alignTop="@+id/x_button"
        android:layout_toRightOf="@+id/x_button"
        android:layout_toEndOf="@+id/x_button" />

    <Button
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:text="z"
        android:id="@+id/z_button"
        android:layout_alignTop="@+id/y_button"
        android:layout_toRightOf="@+id/y_button"
        android:layout_toEndOf="@+id/y_button" />

</RelativeLayout>
